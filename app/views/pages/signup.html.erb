<%= form_for @user, :html => { class: "form-signin" } do |f| %>


    <%= f.label :username, class: "sr-only" %>
    <%= f.text_field :username, class: "form-control", :autofocus => true, placeholder: "username" %>

    <%= f.label :name, class: "sr-only" %>
    <%= f.text_field :name, class: "form-control", placeholder: "name"  %>

    <%= f.label :password, class: "sr-only" %>
    <%= f.password_field :password, class: "form-control", placeholder: "password" %>

    <%= f.label :password_confirmation, class: "sr-only" %>
    <%= f.password_field :password_confirmation, class: "form-control", placeholder: "password" %>

      <%= f.submit 'Sign up', class: "btn btn-lg btn-primary btn-block" %>

<% end %>
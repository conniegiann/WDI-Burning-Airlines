<%= form_for @user, do |f| %>


    <%= f.label :username %>
    <%= f.text_field :username, :autofocus => true %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :password %>
    <%= f.password_field :password, placeholder: "password" %>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, placeholder: "password" %>

      <%= submit_tag 'Sign up' %>

<% end %>